<div id="watched_form" style="display: none; margin-top: 1em;">
  <%= form_with url: already_watched_movies_by_users_path, method: :post do |f| %>
    <%= hidden_field_tag :movie_id, @movie.id %>

    <div class="max-w-xs">
      <%= label_tag 'already_watched_movies_by_user[personal_rating]', "Your Rating (out of 10)", class: "block mb-2 text-sm font-medium text-gray-900" %>
      <%= number_field_tag 'already_watched_movies_by_user[personal_rating]', nil, step: 0.1, min: 0, max: 10, class: "rounded-lg" %>
    </div>

    <div class="max-w-xs">
      <%= label_tag 'already_watched_movies_by_user[remarks]', "Remarks", class: "block mb-2 mt-2 text-sm font-medium text-gray-900" %>
      <%= text_area_tag 'already_watched_movies_by_user[remarks]', nil, class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= submit_tag "Submit", class: " w-full px-5 py-2 me-2 text-sm mt-4 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-all duration-300 ease-in-out transform hover:scale-105 hover:shadow-lg cursor-pointer" %>
    </div>
  <% end %>
</div>
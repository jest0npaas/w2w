<body class="bg-cover bg-[url('/dark-vip-cinema-studio-still-life.jpg')] overflow-x-hidden">

  <img src="/result (1).png" class="w-3xs fixed left-60 mt-4">
  <div class="fixed right-0 mt-4 mr-45 inline-flex justify-center items-center py-1 px-3 text-base font-medium text-center text-white rounded-lg hover:bg-gray-200 hover:text-gray-800 border-4 border-gray-200">
    <%= button_to 'Back', search_path, method: :get, class: "cursor-pointer" %>
  </div>


  <div class="grid grid-cols-5 gap-4 mt-30">
    <% if @movies.present? %>
      <% @movies.each_with_index do |movie, index| %>
        <div class= "relative group">
          <img src="<%= movie["Poster"] %>" 
          alt="Poster for <%= movie["Title"] %>"
          id="movie-<%= index %>"
          data-popover-target="popover-<%= index %>"
          data-popover-trigger="hover"
          class="cursor-pointer"
          />
        
          <div data-popover 
            id="popover-<%= index %>"
            role="tooltip"
            class="absolute z-10 invisible max-w-xs w-full text-sm p-2 bg-white border border-gray-200 rounded-lg shadow-sm hover:bg-gray-100">
              <div class="p-3">
                <div class="flex">
                  <div class="me-3 grow overflow-hidden">
                    <p class="font-semibold w-full break-words whitespace-normal"><%= movie["Title"] %></p>
                    <p class="mt-2 text-xs"><%= movie["Year"] %></p>
                    <% if user_signed_in? %>
                      <div>
                        <%= link_to "Show", movie_path(movie["imdbID"]), class: "inline-flex items-center justify-center w-full px-5 py-2 me-2 text-sm mt-4 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-all duration-300 ease-in-out transform hover:scale-105 hover:shadow-lg cursor-pointer" %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            <div data-popper-arrow></div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</body>
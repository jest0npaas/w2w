<h3> My Soon To Watch </h3>
<br/>
<span> Count: <%= @my_soon_to_watch_movies.count %> </span>

<% if @my_soon_to_watch_movies.any? %>
  <ul>
    <% @my_soon_to_watch_movies.each do |m| %>
      <li>
        <strong><%= m.title %></strong>
        <img src=<%= m.poster %> alt="">
        <%= link_to "Show", movie_path(m.api_movie_id) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You have no soon to watch movies yet.</p>
<% end %>